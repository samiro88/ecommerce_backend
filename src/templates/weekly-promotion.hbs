    <style>
      @media only screen and (max-width: 500px) {
        .promo-table-outer {
          width: 100% !important;
          margin: 0 !important;
          padding: 0 !important;
        }

        .promo-table,
        .promo-table thead,
        .promo-table tbody,
        .promo-table tr,
        .promo-table th,
